{
	"browserSync": {
		"server": {
			"baseDir": "tmp/public",
			"index": "index.html",
			"serveStaticOptions": {
				"extensions": ["html"]
			}
		}
	},

	"html": {
		"src": "templates/pages",
		"data": "templates/__data/global.json",
		"dest": "./"
	},

	"tokens": {
		"src": "tokens",
		"files": ["colors.json"],
		"dest": "scss/_tokens"
	}
}
